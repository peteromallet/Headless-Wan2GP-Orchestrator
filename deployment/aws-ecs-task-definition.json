{
  "family": "runpod-orchestrator",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "orchestrator",
      "image": "YOUR_ECR_REPO:latest",
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/runpod-orchestrator",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "MIN_ACTIVE_GPUS",
          "value": "2"
        },
        {
          "name": "MAX_ACTIVE_GPUS", 
          "value": "10"
        },
        {
          "name": "TASKS_PER_GPU_THRESHOLD",
          "value": "3"
        },
        {
          "name": "RUNPOD_INSTANCE_TYPE",
          "value": "NVIDIA RTX A4000"
        }
      ],
      "secrets": [
        {
          "name": "SUPABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT:secret:runpod-orchestrator:SUPABASE_URL::"
        },
        {
          "name": "SUPABASE_SERVICE_ROLE_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT:secret:runpod-orchestrator:SUPABASE_SERVICE_ROLE_KEY::"
        },
        {
          "name": "RUNPOD_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT:secret:runpod-orchestrator:RUNPOD_API_KEY::"
        },
        {
          "name": "RUNPOD_CONTAINER_IMAGE",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT:secret:runpod-orchestrator:RUNPOD_CONTAINER_IMAGE::"
        }
      ]
    }
  ]
} 